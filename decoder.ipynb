from PIL import Image
import numpy as np
import random
from datetime import datetime
import pandas as pd
import math

def decode(Nc, encoded_img, codebook):
  #print(len(encoded_img))
  decode_array = search_codebbok(Nc, encoded_img, codebook)
  reconstruction_img = get_reconstruction_img(decode_array)
  return reconstruction_img
  

def search_codebbok(Nc, encoded_img, codebook):
  red_chnl = [[] for _ in range(len(encoded_img))]
  k = 0
  #print(len(encoded_img))
  for index in encoded_img:
    red_chnl[k].append(codebook[int(index)])
    k = k+1
    #print(k)
  
  red_chnl = np.array(red_chnl)

  reshaped_red_chnl = red_chnl.reshape(-1, 4, 4)
  return reshaped_red_chnl

def get_reconstruction_img(decode_array):
  n = int((len(decode_array))**0.5)
  #print(len(decode_array))
  temp_img=[]

  for row in range(n):
    temp_img.append(np.concatenate((decode_array[n*row : n*(row+1)]), axis=1))
    #print(temp_img)
  
  new_red_chnl = np.concatenate((temp_img[0 : n]), axis=0)
  #print(new_red_chnl)
  reconstruction_img = Image.fromarray(np.dstack((new_red_chnl, new_red_chnl, new_red_chnl)).astype(np.uint8))

  return reconstruction_img
    
if __name__ == "__main__":
  # 記錄開始時間
  start_time = datetime.now()
  Nc = 1024
  encoded_img = np.array(pd.read_csv('1024encoded_img_0613_1759_1.csv', header=None))
