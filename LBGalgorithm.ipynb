from PIL import Image
import numpy as np
import random
from datetime import datetime

def get_image():
  image = Image.open('1.png')
  image_array = np.array(image)
  image_red_chnl = image_array[:,:,0]
  image2 = Image.open('3.png')
  image2_array = np.array(image2)
  image2_red_chnl = image2_array[:,:,0]
  two_image_red = np.concatenate((image_red_chnl, image2_red_chnl), axis=0)
  #print(two_image_red)

  return two_image_red

def encode(image_red_chnl):
  Nc = 1024

  trainig_set = get_trainig_set(image_red_chnl)
  #print(trainig_set)
  M = len(trainig_set)
  initial_codebook = generate_initial_codebook(M, Nc, trainig_set)

  old_distortion = 4999999
  old_codebook = np.array(initial_codebook)
  #print(old_codebook)
  iter_num = 0
  #for i_num in range(5):
  while(True):
    #print(old_codebook.shape)
    classified_Tset, new_distortion = classification_trainig_set(Nc, iter_num, trainig_set, old_codebook)
    #print(classified_Tset)
    print(new_distortion)
    iter_num = iter_num + 1

    if old_distortion - new_distortion  > 1000:
      new_codebook = get_new_codebook(Nc, classified_Tset, old_codebook)
      #np.savetxt('new_codebook'+str(iter_num)+'.csv', new_codebook, delimiter=',')
      #print(new_codebook)

    else:
      return new_codebook ,Nc
      break

    old_codebook = np.array(new_codebook)
    old_distortion = new_distortion

def get_trainig_set(image_red_chnl):
  # 獲取圖像的寬度和高度
  height, width = image_red_chnl.shape

  # 計算新陣列的高度和寬度
  new_height = height // 4
  new_width = width // 4

  # 提取所有4x4區塊的像素值
  blocks = []
  for i in range(new_height):
    for j in range(new_width):
      # 提取4x4區塊的像素值
      block = image_red_chnl[i*4:(i+1)*4, j*4:(j+1)*4]

      # 添加到列表中
      blocks.append(block.flatten())

  # 將所有區塊的像素值連接起來成一個一維陣列
  trainig_set = np.array(blocks)
  #np.savetxt('trainig_set.csv', trainig_set, delimiter=',')
  return trainig_set

def generate_initial_codebook(M, Nc, trainig_set):
  selected_indices  = np.random.choice(len(trainig_set), Nc, replace=False)  # 隨機選取 n 個索引，不允許重複選取
  return trainig_set[selected_indices]

def classification_trainig_set(Nc, iter_num, trainig_set, old_codebook):
  classified_Tset = [[] for _ in range(Nc)]
  dmin_list = [[] for _ in range(Nc)]
  k = 0

  for block in trainig_set:
    mse_list = []
    for matrix in old_codebook:
      mse = get_mse(block, matrix)
      mse_list.append(mse)

    # Find the smallest number
    smallest_mse = min(mse_list)
    # Find the position of the smallest number
    smallest_mse_position = mse_list.index(smallest_mse)

    classified_Tset[smallest_mse_position].append(block)
    dmin_list[smallest_mse_position].append(smallest_mse)
    k = k + 1
    #print(iter_num,",",k)

  distortion = get_distortion(dmin_list)
  #print(classified_Tset)
  #print(dmin_list)

  new_classified_Tset = classified_Tset
  for k in range(len(classified_Tset)):
    if len(classified_Tset[k]) == 0:
      new_classified_Tset = move_arrays(k, classified_Tset, dmin_list)

  return new_classified_Tset, distortion

def get_mse(block, matrix):
  arr = block
  arr2 = matrix
  s=0
  for i in range(16):
      s=s+((arr[i]-arr2[i])**2)
  s=s/16

  return s

def get_distortion(dmin_list):
  distortion = 0
  for d_arr in dmin_list:
    distortion = distortion + np.sum(d_arr)
  return distortion

def get_new_codebook(Nc, classified_Tset, old_codebook):
  new_codebook = []
  for arr in classified_Tset:
    average_arr = np.mean(arr, axis=0)
    new_codebook.append(average_arr)
  #print(new_codebook)

  return new_codebook

def move_arrays(k, classified_Tset, dmin_list):
  longest_subs_index = classified_Tset.index(max(classified_Tset, key=len))
  longest_subs = max(classified_Tset, key=len)
  move_arrs_num = len(longest_subs) // 2
  classified_Tset[k] = longest_subs[-move_arrs_num : ]
  classified_Tset[longest_subs_index] = longest_subs[0 : move_arrs_num]

  return classified_Tset

if __name__ == "__main__":
  # 記錄開始時間
  start_time = datetime.now()
  image = get_image()
  fnl_codebook ,Nc = encode(image)
  #print(fnl_codebook)
  current_time = datetime.now()
  # 格式化時間，僅保留年、月、日、時、分 
  formatted_time = current_time.strftime("%m%d_%H%M")
  np.savetxt(str(Nc)+'codebook_'+str(formatted_time)+'.csv', fnl_codebook, delimiter=',')
  end_time = datetime.now()
  time_difference = end_time - start_time

  print("執行時間:", time_difference)
