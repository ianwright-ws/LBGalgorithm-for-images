def encode(Nc, image_red_chnl, codebook):
  new_img = flating_blocks(image_red_chnl)
  #print(trainig_set)
  #M = len(new_img)
  classified_data = classification_img(Nc, new_img, codebook)
  return classified_data

def flating_blocks(image_red_chnl):
  # 獲取圖像的寬度和高度
  height, width = image_red_chnl.shape

  # 計算新陣列的高度和寬度
  new_height = height // 4
  new_width = width // 4

  # 提取所有4x4區塊的像素值
  blocks = []
  for i in range(new_height):
    for j in range(new_width):
      # 提取4x4區塊的像素值
      block = image_red_chnl[i*4:(i+1)*4, j*4:(j+1)*4]

      # 添加到列表中
      blocks.append(block.flatten())

  # 將所有區塊的像素值連接起來成一個一維陣列
  new_img = np.array(blocks)
  return new_img

def classification_img(Nc, new_img, codebook):
  classified_data = [[] for _ in range(len(new_img))]
  #dmin_list = [[] for _ in range(Nc)]
  k = 0
  for block in new_img:
    mse_list = []
    for matrix in codebook:
      mse = get_mse(block, matrix)
      mse_list.append(mse)

    # Find the smallest number
    smallest_mse = min(mse_list)
    # Find the position of the smallest number
    smallest_mse_position = mse_list.index(smallest_mse)
    classified_data[k].append(smallest_mse_position)
    k = k + 1
    print(k)

  return classified_data

def get_mse(block, matrix):
  s=0
  for i in range(16):
    s=s+((block[i]-matrix[i])**2)
  s=s/16
  return s

